<h1>Login</h1>
<%= form_for(:session, url: login_path) do |f| %>

	<%= f.label :email %>
	<%= f.email_field :email %><br>

	<%= f.label :password %>
	<%= f.password_field :password %><br>

	<%= f.label :remember_me, "Keep me logged in on this computer" %>
	<%= f.check_box :remember_me, { checked: true } %><br>

	<%= f.submit 'Submit' %>
<% end %>
