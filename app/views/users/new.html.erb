<header>
	<h1>Signup</h1>
</header>

<div id="container-salmon">
	<table class="form">
		<%= form_for(@user) do |f| %>
			<tr><td>
				<h2><%= f.label :name %></h2>
				<%= f.text_field :name %><br>
			</td></tr>

			<tr><td>
				<h2><%= f.label :email %></h2>
				<%= f.email_field :email %><br>
			</td></tr>

			<tr><td>
				<h2><%= f.label :password %></h2>
				<%= f.password_field :password %><br>
			</td></tr>

			<tr><td>
				<h2><%= f.label :password_confirmation, "Confirmation" %></h2>
				<%= f.password_field :password_confirmation %><br>
			</td></tr>

			<tr><td>
				<%= f.submit 'Submit' %>
			</td></tr>
		<% end %>
	</table>
</div>

<footer>
</footer>
